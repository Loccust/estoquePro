{
  "version": 2,
  "builds": [
    {
      "src": "/backend/src/main.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
 {
      "src": "/apidocs(.*)",     // Rota para o Swagger UI do Flasgger e seus assets
      "dest": "/backend/src/main.py"
    },
    {
      "src": "/apispec_1.json", // Rota para o JSON da especificação OpenAPI gerado pelo Flasgger
      "dest": "/backend/src/main.py"
    },
    {
      "src": "/flasgger_static/(.*)", // Rota para os assets estáticos do Flasgger
      "dest": "/backend/src/main.py"
    },
    {
      "src": "/api/(.*)",       // Suas outras rotas de API (ex: /api/produtos)
      "dest": "/backend/src/main.py"
    },
    {
      "src": "/(.*)",           // Frontend estático
      "dest": "/public/$1"
    }
  ]
}