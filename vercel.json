{
  "version": 2,
  "builds": [
    {
      "src": "/backend/src/main.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/apidocs(.*)",
      "dest": "/backend/main.py"
    },
    {
      "src": "/apispec_1.json",
      "dest": "/backend/main.py"
    },
    {
      "src": "/flasgger_static/(.*)",
      "dest": "/backend/main.py"
    },
    {
      "src": "/api/(.*)",      
      "dest": "/backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}